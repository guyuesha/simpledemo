<br />
<% post.comments.forEach(function (comment, index) { %>
    <hr>
  <!-- <div style="padding-left:4em"> -->
    <div class="am-form-group">
        <img src="<%= comment.head %>" class="l_head" />
        <a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="info">  <br> 评论于： <%= comment.time %></span></p>
    <p><%- comment.content %>
    </div>
  <!-- </div> -->
<% }) %>
<hr>
<form class="am-form am-g"  method="post" action="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
<h3 class="blog-comment">评论</h3>
      <fieldset>
<% if (user) { %>
    <div class="am-form-group am-u-sm-4 blog-clear-left">
  <input placeholder="姓名" type="text" name="name" value="<%= user.name %>" /><br />
</div>
      <div class="am-form-group am-u-sm-4">
  <input placeholder="邮箱" type="text" name="email" value="<%= user.email %>" /><br />
</div>
  <div class="am-form-group am-u-sm-4 blog-clear-right">
      <input placeholder="网址" type="text" name="website" value="/u/<%= user.name %>" /><br />
</div>
<% } else { %>
    <div class="am-form-group am-u-sm-4 blog-clear-left">
 <input placeholder="姓名" type="text" name="name" /><br />
 </div>
     <div class="am-form-group am-u-sm-4">
 <input placeholder="邮箱" type="text" name="email" /><br />
 </div>
 <div class="am-form-group am-u-sm-4 blog-clear-right">
     <input placeholder="网址" type="text" name="website" value="http://" /><br />
     </div>
<% } %>
<div class="am-form-group">
  <textarea name="content" rows="5" cols="80"></textarea><br />
  </div>
        <p><button type="submit" class="am-btn am-btn-default">发表评论</button></p>
</fieldset>
</form>
